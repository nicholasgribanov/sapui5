<mvc:View
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="opensap.firstapp.controller.App"
	>
	<Carousel>
		<pages>
			<Image 
				src="https://www.severstal.com/files/27647/1172x298_desctop_4.jpg" height="300px" />
			<Image 
				src="https://www.severstal.com/files/9941/triplets.jpg" height="300px" />
			<Image 
				src="https://www.severstal.com/files/9941/triplets.jpg" height="300px" />
		</pages>
	</Carousel>
	<Button
		text="{i18n>showHelloButtonText}"
		press="onShowHello"
	/>
	<Input 
		value="{helloPanel>/recipient/name}"
		description="Hello {helloPanel>/recipient/name}"
		valueLiveUpdate="true"
		width="60%"
	/>
</mvc:View>